{
	"name": "kind-language-server",
	"description": "A language server for kind language",
	"publisher": "RafaelSantos",
	"author": "Rafael Santos",
	"license": "MIT",
	"version": "1.0.8",
	"repository": {
		"type": "git",
		"url": "https://github.com/rafaelnsantos/kind-language-server"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"kind",
		"language server"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:kind"
	],
	"icon": "images/kindelia_logo.png",
	"galleryBanner": {
		"color": "#030518",
		"theme": "dark"
	},
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Kind Language Server configuration",
			"properties": {
				"kindLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"kindLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"kindLanguageServer.projectRootFolder": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "Project root folder"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@monx/eslint-config-next": "^1.0.7",
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.25.0",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.6.3"
	}
}
